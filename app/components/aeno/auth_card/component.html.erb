<div class="min-h-screen flex items-center justify-center px-inset py-inset bg-background">
  <div class="w-full <%= width_class %> space-y-6">
    <div class="text-center space-y-2">
      <h1 class="text-page-title leading-page-title font-weight-page-title text-foreground"><%= title %></h1>
      <% if subtitle.present? %>
        <p class="text-ui text-muted-foreground"><%= subtitle %></p>
      <% end %>
    </div>

    <div class="rounded-card border border-border px-inset py-inset space-y-6 bg-background-elevated">
      <% if alert? %>
        <%= alert %>
      <% end %>

      <%= content %>

      <% if footer? %>
        <div class="space-y-4">
          <%= footer %>
        </div>
      <% end %>
    </div>
  </div>
</div>
