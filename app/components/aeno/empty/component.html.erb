<div class="px-wrapped py-wrapped" data-controller="<%= controller_name %>">
  <div class="flex items-center justify-center flex-col border border-dashed border-border rounded-card px-wrapped py-wrapped min-h-[300px]">
    <div class="flex items-center justify-center flex-col space-y-4">
      <% if icon %>
        <div class="text-muted-foreground">
          <%= lucide_icon(icon, class: "w-12 h-12") %>
        </div>
      <% end %>

      <% if title %>
        <div class="font-drawer-title-weight text-drawer-title leading-drawer-title text-foreground"><%= title %></div>
      <% end %>

      <% if description %>
        <div class="text-ui text-muted-foreground text-center max-w-sm">
          <%= description %>
        </div>
      <% end %>

      <% if content.present? %>
        <div class="text-ui text-muted-foreground text-center max-w-sm">
          <%= content %>
        </div>
      <% end %>

      <% if actions.any? %>
        <div class="flex gap-2 mt-2">
          <% actions.each do |action| %>
            <%= action %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>