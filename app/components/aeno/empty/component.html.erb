<div class="p-6" data-controller="<%= controller_name %>">
  <div class="flex items-center justify-center flex-col border border-dashed border-stone-300 rounded-lg p-6 min-h-[300px]">
    <div class="flex items-center justify-center flex-col space-y-4">
      <% if icon %>
        <div class="text-gray-400">
          <%= lucide_icon(icon, class: "w-12 h-12") %>
        </div>
      <% end %>

      <% if title %>
        <div class="font-bold text-xl text-gray-900"><%= title %></div>
      <% end %>

      <% if description %>
        <div class="text-sm text-gray-500 text-center max-w-sm">
          <%= description %>
        </div>
      <% end %>

      <% if content.present? %>
        <div class="text-sm text-gray-500 text-center max-w-sm">
          <%= content %>
        </div>
      <% end %>

      <% if actions.any? %>
        <div class="flex gap-2 mt-2">
          <% actions.each do |action| %>
            <%= action %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>