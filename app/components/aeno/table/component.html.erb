<div data-controller="<%= controller_name %>" class="w-full">
  <%# Batch actions toolbar (hidden by default, shown when rows selected) %>
  <% if selectable && batch_actions.any? %>
    <div data-aeno--table-target="batchToolbar" class="hidden mb-4 p-4 bg-secondary-light rounded-lg flex items-center justify-between">
      <span data-aeno--table-target="selectedCount" class="text-sm font-medium text-foreground"></span>
      <div class="flex gap-gap">
        <% batch_actions.each do |action| %>
          <%= action %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Filters toolbar (always visible when filters exist) %>
  <% if filters.any? %>
    <div class="mb-4 flex gap-gap items-center">
      <% filters.each do |filter| %>
        <%= filter %>
      <% end %>
    </div>
  <% end %>

  <%# Table or Empty State %>
  <% if rows.any? %>
    <div class="overflow-x-auto min-w-0">
      <table class="<%= table_classes %>" <%= "id=\"#{id}\"" if id %>>
        <%= header if header? %>
        <tbody class="bg-background-elevated divide-y divide-border">
          <% rows.each do |row| %>
            <%= row %>
          <% end %>
        </tbody>
      </table>
    </div>
  <% elsif empty_state? %>
    <%= empty_state %>
  <% end %>

  <%# Pagination %>
  <% if pagination? %>
    <%= pagination %>
  <% end %>
</div>
